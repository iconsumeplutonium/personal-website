---
interface Props {
	url: string;
	image: string;
	title: string;
	body: string;
}

const { url, image, title, body } = Astro.props;
---

<li class="card">
	<a class="card__link" href={url}>
		<div class="card__image_div">
			<img
				class="card__img"
				src={image}
				role="presentation"
				width="226"
				height="127"
				loading="lazy"
				decoding="async"
			/>
		</div>
		<div class="card__content" style="flex: 2;">
			<h3 class="card__title">
				{title}
			</h3>
			<p class="card__txt">
				{body}
			</p>
		</div>
	</a>
</li>
