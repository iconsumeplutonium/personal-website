---
import { getCollection } from "astro:content";
import Layout from "../layouts/Layout.astro";
import Card from "../components/CardPost.astro";
import BlogCard from "../components/BlogCard.astro";
const allPosts = await getCollection("blog");
const pageTitle = "blog";
---

<Layout pageTitle={pageTitle}>
	<!-- <div class="gif">
        <img src="/images/blog.webp" role="presentation" width="300" height="259" decoding="async">
    </div> -->
	<h2 style="margin-bottom: 5px;">Blog</h2>
	<ul role="list" class="link-blog-grid">
		{
			allPosts.map((cardPost) => (
				<BlogCard
					title={cardPost.data.title}
					date={cardPost.data.date}
					description={cardPost.data.description}
					url={`/blog/${cardPost.id}/`}
				/>
			))
		}
	</ul>
</Layout>
